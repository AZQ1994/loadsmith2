#!/usr/bin/env ruby
# frozen_string_literal: true

# Mobile game-style test server
# Simulates a card collection game API

require "webrick"
require "json"
require "securerandom"

TOKENS = {}

server = WEBrick::HTTPServer.new(
  Port: 8080,
  Logger: WEBrick::Log.new($stderr, WEBrick::Log::WARN),
  AccessLog: []
)

# --- Helper ---
def json_response(res, data, status: 200)
  res.status = status
  res["Content-Type"] = "application/json"
  res.body = JSON.generate(data)
end

def authenticate(req)
  token = req["Authorization"]&.sub("Bearer ", "")
  TOKENS[token]
end

RARITIES = %w[N N N R R SR SSR].freeze
CARD_NAMES = %w[FireDragon IceQueen ThunderBeast WindBird EarthSpirit LightSaint DarkShadow WaterSerpent SteelKnight ForestFairy].freeze

# --- Auth ---

server.mount_proc "/api/auth/login" do |req, res|
  sleep(rand(0.03..0.08))
  body = JSON.parse(req.body || "{}") rescue {}
  token = SecureRandom.hex(16)
  user_id = body["user_id"] || "anonymous"
  TOKENS[token] = { user_id: user_id, coins: 10000, stamina: 100 }
  json_response(res, { token: token, user_id: user_id })
end

server.mount_proc "/api/auth/logout" do |req, res|
  sleep(rand(0.01..0.03))
  token = req["Authorization"]&.sub("Bearer ", "")
  TOKENS.delete(token)
  json_response(res, { status: "ok" })
end

# --- Home ---

server.mount_proc "/api/home" do |req, res|
  sleep(rand(0.02..0.06))
  json_response(res, {
    announcements: [
      { id: 1, title: "Scheduled Maintenance Notice", date: "2026-02-28" },
      { id: 2, title: "New Gacha Banner Added!", date: "2026-02-27" }
    ],
    banners: [
      { id: 1, image: "/img/banner_gacha.png", link: "/gacha" },
      { id: 2, image: "/img/banner_event.png", link: "/event" }
    ],
    daily_login: { day: 7, reward: "SR Guaranteed Ticket" }
  })
end

server.mount_proc "/api/home/notifications" do |req, res|
  sleep(rand(0.01..0.04))
  json_response(res, {
    unread: rand(0..5),
    items: (1..3).map { |i|
      { id: i, type: %w[gift mission friend].sample, message: "Notification #{i}", read: false }
    }
  })
end

# --- Cards ---

server.mount_proc "/api/cards" do |req, res|
  sleep(rand(0.05..0.12))
  cards = (1..30).map { |i|
    { id: i, name: "#{CARD_NAMES[i % 10]} #{RARITIES.sample}",
      rarity: RARITIES.sample, level: rand(1..50), power: rand(1000..9999) }
  }
  json_response(res, { cards: cards, total: 30 })
end

server.mount_proc "/api/cards/detail" do |req, res|
  sleep(rand(0.03..0.08))
  card_id = req.query["id"]&.to_i || 1
  json_response(res, {
    id: card_id,
    name: "#{CARD_NAMES[card_id % 10]} SSR",
    rarity: "SSR",
    level: rand(1..99),
    power: rand(5000..15000),
    skills: [
      { name: "Flame Strike", damage: rand(500..2000), cost: 3 },
      { name: "Guardian Shield", defense: rand(300..1000), cost: 2 }
    ],
    lore: "A legendary card sealed away in ancient times."
  })
end

server.mount_proc "/api/cards/enhance" do |req, res|
  sleep(rand(0.08..0.20))
  body = JSON.parse(req.body || "{}") rescue {}
  success = rand < 0.8
  json_response(res, {
    success: success,
    card_id: body["card_id"],
    new_level: success ? (body["current_level"].to_i + 1) : body["current_level"],
    message: success ? "Enhancement succeeded!" : "Enhancement failed..."
  })
end

# --- Gacha ---

server.mount_proc "/api/gacha/lineup" do |req, res|
  sleep(rand(0.03..0.07))
  json_response(res, {
    banners: [
      { id: 1, name: "FireDragon Festival", cost: 300, currency: "gem",
        rates: { SSR: 3.0, SR: 15.0, R: 40.0, N: 42.0 },
        featured: [{ name: "FireDragon EX", rarity: "SSR", pickup_rate: 0.7 }] },
      { id: 2, name: "Standard Gacha", cost: 200, currency: "gem",
        rates: { SSR: 1.5, SR: 10.0, R: 45.0, N: 43.5 },
        featured: [] }
    ]
  })
end

server.mount_proc "/api/gacha/draw" do |req, res|
  sleep(rand(0.10..0.25))
  body = JSON.parse(req.body || "{}") rescue {}
  count = body["count"]&.to_i || 1
  results = count.times.map {
    rarity = RARITIES.sample
    { name: "#{CARD_NAMES.sample} #{rarity}", rarity: rarity, is_new: rand < 0.3 }
  }
  json_response(res, {
    results: results,
    new_count: results.count { _1[:is_new] },
    remaining_gems: rand(0..5000)
  })
end

# --- Missions ---

server.mount_proc "/api/missions" do |req, res|
  sleep(rand(0.03..0.08))
  json_response(res, {
    daily: (1..5).map { |i|
      prog = rand(0..10)
      { id: i, title: "Daily Mission #{i}", progress: prog, goal: 10,
        completed: prog >= 10, claimed: false,
        reward: { type: "gem", amount: 50 } }
    },
    weekly: (1..3).map { |i|
      { id: 100 + i, title: "Weekly #{i}", progress: rand(0..30), goal: 30,
        completed: false, claimed: false,
        reward: { type: "ticket", amount: 1 } }
    }
  })
end

server.mount_proc "/api/missions/claim" do |req, res|
  sleep(rand(0.05..0.12))
  body = JSON.parse(req.body || "{}") rescue {}
  json_response(res, {
    mission_id: body["mission_id"],
    reward: { type: "gem", amount: 50 },
    message: "Reward claimed!"
  })
end

# --- Shop ---

server.mount_proc "/api/shop" do |req, res|
  sleep(rand(0.04..0.10))
  json_response(res, {
    items: [
      { id: 1, name: "Stamina Potion", price: 100, currency: "coin", stock: 99 },
      { id: 2, name: "Enhancement Pack", price: 500, currency: "coin", stock: 10 },
      { id: 3, name: "Gems x100", price: 980, currency: "yen", stock: nil }
    ],
    daily_deals: [
      { id: 10, name: "Value Pack", price: 300, currency: "gem", remaining: "12:34:56" }
    ]
  })
end

server.mount_proc "/api/shop/buy" do |req, res|
  sleep(rand(0.06..0.15))
  body = JSON.parse(req.body || "{}") rescue {}
  json_response(res, {
    item_id: body["item_id"],
    success: true,
    message: "Purchase complete!"
  })
end

trap("INT") { server.shutdown }
trap("TERM") { server.shutdown }

puts "=== Loadsmith Test Server (Mobile Game API) ==="
puts "http://localhost:8080"
puts ""
puts "Endpoints:"
puts "  POST /api/auth/login          Login"
puts "  POST /api/auth/logout         Logout"
puts "  GET  /api/home                Home"
puts "  GET  /api/home/notifications  Notifications"
puts "  GET  /api/cards               Card list"
puts "  GET  /api/cards/detail?id=N   Card detail"
puts "  POST /api/cards/enhance       Card enhance"
puts "  GET  /api/gacha/lineup        Gacha lineup"
puts "  POST /api/gacha/draw          Gacha draw"
puts "  GET  /api/missions            Mission list"
puts "  POST /api/missions/claim      Claim reward"
puts "  GET  /api/shop                Shop"
puts "  POST /api/shop/buy            Purchase"
puts ""
puts "Ctrl+C to stop"
server.start
